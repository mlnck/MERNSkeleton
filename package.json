{
  "name": "mernskeleton",
  "version": "1.0.0",
  "description": "Skeleton of MERN Stack",
  "main": "index.js",
  "scripts": {
    "build": "yarn run build:client && yarn run build:server",
    "build:client": "cross-env NODE_ENV=production webpack --config ./config/webpack/webpack.prod.js",
    "build:server": "cross-env MONGO_USE_LOCAL=false BABEL_DISABLE_CACHE=1 NODE_ENV=production webpack --config ./config/webpack/webpack.server.js",
    "clean:slate": "yarn run clean && yarn run slate",
    "clean": "rimraf _build",
    "lint": "eslint client server",
    "lint:fix": "eslint --fix client server",
    "pretest": "npm run test:clean && npm run lint",
    "slate": "rimraf node_modules && yarn",
    "start": "cross-env BABEL_DISABLE_CACHE=1 NODE_ENV=development nodemon index.js",
    "start:prod": "cross-env NODE_ENV=production node index.js",
    "test:clean": "rimraf ./coverage",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "travis": "jest"
  },
  "pre-commit": [
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mlnck/MERNSkeleton.git"
  },
  "keywords": [
    "MERN",
    "Skeleton"
  ],
  "author": "mlnck",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mlnck/MERNSkeleton/issues"
  },
  "homepage": "https://github.com/mlnck/MERNSkeleton#readme",
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/_Archive_forReferenceONLY",
      ".*_Structure.*"
    ]
  },
  "dependencies": {
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.24.1",
    "body-parser": "^1.17.2",
    "compression": "^1.7.0",
    "cross-env": "^5.0.1",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "immutable": "^3.8.1",
    "mongoose": "^4.11.3",
    "node-fetch": "^1.7.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-ga": "^2.2.0",
    "react-helmet": "^5.1.3",
    "react-intl": "^2.3.0",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.2",
    "react-router-config": "^1.0.0-beta.3",
    "react-router-dom": "^4.1.2",
    "react-router-redux": "^4.0.8",
    "redux": "^3.7.2",
    "redux-immutable": "^4.0.0",
    "redux-saga": "^0.15.6",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1",
    "styled-components": "^2.1.1",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.3",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-webpack-loaders": "^0.9.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "chunk-manifest-webpack-plugin": "^1.1.2",
    "cssnano": "^3.10.0",
    "enzyme": "^2.9.1",
    "eslint": "^4.5.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-ava": "^4.2.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "^7.3.0",
    "eslint-plugin-redux-saga": "^0.4.0",
    "eventsource-polyfill": "^0.9.6",
    "extract-text-webpack-plugin": "^3.0.0",
    "jest": "^20.0.4",
    "mockgoose": "^7.3.3",
    "nodemon": "^1.11.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-focus": "^2.0.0",
    "postcss-loader": "^2.0.6",
    "postcss-reporter": "^5.0.0",
    "pre-commit": "^1.2.2",
    "react-hot-loader": "^3.0.0-beta.2",
    "react-test-renderer": "^15.6.1",
    "webpack": "^3.3.0",
    "webpack-dev-middleware": "^1.11.0",
    "webpack-externals-plugin": "^1.0.0",
    "webpack-hot-middleware": "^2.18.2",
    "webpack-manifest-plugin": "^1.3.1"
  }
}
